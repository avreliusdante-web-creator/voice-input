{
  "manifest_version": 3,
  "name": "Voice input",
  "version": "1.0.0",
  "description": "The plugin allows you to convert your voice to text, edit the text, and send it with a single click in an open social media conversation. This eliminates the need to use the keyboard when typing large numbers of messages on social media.",
  "permissions": ["activeTab"],
  "action": {
    "default_title": "Voice input",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://vk.com/*",
        "*://www.vk.com/*",
        "*://ok.ru/*",
        "*://web.telegram.org/*",
        "*://web.whatsapp.com/*",
        "*://twitter.com/*",
        "*://x.com/*",
        "*://www.facebook.com/*",
        "*://facebook.com/*",
        "*://www.instagram.com/*",
        "*://instagram.com/*",
        "*://linkedin.com/*",
        "*://www.linkedin.com/*",
        "*://mail.google.com/*",
        "*://outlook.live.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ]
}
